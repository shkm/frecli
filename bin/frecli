#!/usr/bin/env ruby
# TODO: show required input for each command.
# I think this is done with switches, even if
# the switch ('-x') need not be specified.

require 'gli'
require 'frecli/table'
require 'frecli'

include GLI::App
include Frecli::Settings

program_desc 'Freckle CLI'

version Frecli::VERSION

subcommand_option_handling :normal
arguments :strict

# desc 'Describe some switch here'
# switch [:s,:switch]

# desc 'Describe some flag here'
# default_value 'the default'
# arg_name 'The name of the argument'
# flag [:f,:flagname]

desc 'Show project'
arg_name 'Describe arguments to projects here'
command :project do |c|
  c.action do |global_options,options,args|
    id = args.first
 
    puts Frecli::Table.horizontal(
      Frecli.project(id),
      { ID: :id, Name: :name, Minutes: :minutes }
    )

    # puts Frecli::Table.horizontal(project, headings, values)
    # Frecli::Table.rows(project, headings, values)
    # puts Frecli::Table.list(projects, headings, values)
    # puts Frecli::Table.show(project, headings, values)
  end
end

desc 'List projects'
arg_name 'Describe arguments to projects here'
command :projects do |c|
  c.default_value 'default'
  c.action do |global_options,options,args|

    # Your command logic here
    # If you have any errors, just raise them
    # raise "that command made no sense"

    puts Frecli::Table.vertical(
      Frecli.projects,
      [ 'ID', 'Name', 'Date created', 'Date updated' ],
      [ :id, :name, :created_at, :updated_at ]
    )

    # puts Terminal::Table.new(rows: rows, headings: ['ID', 'Name', 'Date created', 'Date updated'])
  end
end

desc 'Describe time here'
arg_name 'Describe arguments to time here'
command :time do |c|
  c.action do |global_options,options,args|
    puts "time command ran"
  end
end

pre do |global,command,options,args|
  # Pre logic here
  # Return true to proceed; false to abort and not call the
  # chosen command
  # Use skips_pre before a command to skip this block
  # on that command only
  true
end

post do |global,command,options,args|
  # Post logic here
  # Use skips_post before a command to skip this
  # block on that command only
end

on_error do |exception|
  # Error logic here
  # return false to skip default error handling
  true
end

exit run(ARGV)
